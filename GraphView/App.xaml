<Application x:Class="GraphView.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:graphView="clr-namespace:GraphView"
             xmlns:controls="clr-namespace:GraphView.Framework.Controls;assembly=GraphView.Framework"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <DataTemplate DataType="{x:Type graphView:CustomNode}">
            <Border MinHeight="50" MinWidth="50" BorderBrush="Blue" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="15"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                    <controls:ConnectorControl Grid.Column="1" VerticalAlignment="Top" ConnectionPoint="{Binding InputConnector}"/>
                </Grid>
            </Border>
         </DataTemplate>
        
        <DataTemplate DataType="{x:Type graphView:Connector}">
            <Border Width="10" Height="10" BorderBrush="Green" BorderThickness="1" CornerRadius="5" Background="GreenYellow">
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>
